# ===========================================
# Coomb API - Environment Variables
# ===========================================

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/coomb?schema=public"
DIRECT_URL="postgresql://postgres:postgres@localhost:5432/coomb?schema=public"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="24h"

# AI Service URL
COOMB_AI_URL="http://localhost:8000"
PDF_SERVICE_URL="http://localhost:8000"

# Frontend URL (CORS)
FRONTEND_URL="http://localhost:3000"

# Server
PORT=3001
NODE_ENV=development

